<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dip"
        android:layout_gravity="center_horizontal"
        android:background="#75ffab00">

        <TextView
        android:id="@+id/tvNombreHelado"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:baselineAligned="false"
        android:background="#75ffab00">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text = "Topping 1: "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="5dp"
            android:layout_weight="0.25"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/tvCapa1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="5dp"
            android:layout_weight="0.65"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/ColorCapa1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="5dp"
            android:gravity="right"
            android:layout_weight="0.10" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:baselineAligned="false"
        android:background="#75ffab00">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text = "Helado 1: "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="5dp"
            android:layout_weight="0.25"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/tvCapa2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="5dp"
            android:layout_weight="0.65"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/ColorCapa2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="#111"
            android:padding="5dp"
            android:gravity="right"
            android:layout_weight="0.10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:baselineAligned="false"
        android:background="#75ffab00">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text = "Topping 2: "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="5dp"
            android:layout_weight="0.25"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/tvCapa3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="5dp"
            android:layout_weight="0.65"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/ColorCapa3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="#111"
            android:padding="5dp"
            android:gravity="right"
            android:layout_weight="0.10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:baselineAligned="false"
        android:background="#75ffab00">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text = "Helado 2: "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="5dp"
            android:layout_weight="0.25"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/tvCapa4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="5dp"
            android:layout_weight="0.65"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/ColorCapa4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="#111"
            android:padding="5dp"
            android:gravity="right"
            android:layout_weight="0.10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:baselineAligned="false"
        android:background="#75ffab00">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text = "Topping 3: "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="5dp"
            android:layout_weight="0.25"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/tvCapa5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="5dp"
            android:layout_weight="0.65"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/ColorCapa5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="#111"
            android:padding="5dp"
            android:gravity="right"
            android:layout_weight="0.10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="#75ffab00"
        android:paddingRight="5dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Votos: "
            android:textAppearance="?android:attr/textAppearanceSmall"
             />

        <TextView
            android:id="@+id/tvVotos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_weight="0.1"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvFechaCreacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:gravity="right"
            android:layout_weight="0.9"
            />

    </LinearLayout>


</LinearLayout>