<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#75ffab00"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:padding="5dip"
        android:background="#FFFFFF"
        >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dip"
            android:layout_gravity="center_horizontal"
            android:background="#75ffab00">

            <TextView
                android:id="@+id/tvNombreHelado"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dip"
            android:layout_gravity="center_horizontal"
            android:background="#75ffab00">

            <TextView
                android:id="@+id/tvImagenHelado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="#FFFFFF"

                android:drawableTop="@drawable/ic_drawer"
                />



        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:background="#75ffab00"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Autor: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

            <TextView
                android:id="@+id/tvDetailAutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tvIDHelado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingRight="5dp"
                android:gravity="right"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:baselineAligned="false"
            android:background="#75ffab00">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text = "Topping 1: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:layout_weight="0.25"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/tvDetailCapa1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:layout_weight="0.65"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/ColorCapa1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:gravity="right"
                android:layout_weight="0.10"
                android:background="#FFFFFF"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:baselineAligned="false"
            android:background="#75ffab00">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text = "Helado 1: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:layout_weight="0.25"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/tvDetailCapa2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:layout_weight="0.65"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/ColorCapa2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:gravity="right"
                android:layout_weight="0.10"
                android:background="#FFFFFF"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:baselineAligned="false"
            android:background="#75ffab00">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text = "Topping 2: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:layout_weight="0.25"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/tvDetailCapa3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:layout_weight="0.65"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/ColorCapa3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:gravity="right"
                android:layout_weight="0.10"
                android:background="#FFFFFF"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:baselineAligned="false"
            android:background="#75ffab00">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text = "Helado 2: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:layout_weight="0.25"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/tvDetailCapa4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:layout_weight="0.65"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/ColorCapa4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:gravity="right"
                android:layout_weight="0.10"
                android:background="#FFFFFF"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:baselineAligned="false"
            android:background="#75ffab00">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text = "Topping 3: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:layout_weight="0.25"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/tvDetailCapa5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:layout_weight="0.65"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/ColorCapa5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:gravity="right"
                android:layout_weight="0.10"
                android:background="#FFFFFF"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:background="#75ffab00"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Votos: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

            <TextView
                android:id="@+id/tvVotos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_weight="0.1"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tvFechaCreacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:gravity="right"
                android:layout_weight="0.9"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp"

            >
            <Button
                android:id="@+id/bDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:onClick="delete"
                android:text="Delete"
                android:layout_gravity="bottom"
                android:textSize="20dp"
                android:background="@drawable/button_red"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/buy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:onClick="buy"
                android:text="Buy"
                android:layout_gravity="bottom"
                android:textSize="20dp"
                android:background="@drawable/button_blue"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </LinearLayout>





</RelativeLayout>

</ScrollView>